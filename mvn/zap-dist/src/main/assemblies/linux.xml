<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>zap-linux-assembly</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>ZAP_${project.version}</baseDirectory>
	<fileSets>
		<fileSet>
		  <directory>${project.build.outputDirectory}</directory>
		  <outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>META-INF/**/*</exclude>
			</excludes>
			<lineEnding>unix</lineEnding>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>src/main/scripts/zap.sh</source>
			<outputDirectory>/</outputDirectory>
			<fileMode>0755</fileMode>
			<lineEnding>unix</lineEnding>
			<filtered>true</filtered>
		</file>
	</files>
	<dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <excludes>
        <exclude>org.owasp.zaproxy:zap-api:jar:${project.version}</exclude>
        <exclude>org.owasp.zaproxy:zap-ant-tasks:jar:${project.version}</exclude>
        <exclude>org.owasp.zaproxy:zap:jar:${project.version}</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>org.owasp.zaproxy:zap:jar:${project.version}</include>
        <include>org.owasp.zaproxy:zap-api:jar:${project.version}</include>
      </includes>
    </dependencySet>
	</dependencySets>
</assembly>