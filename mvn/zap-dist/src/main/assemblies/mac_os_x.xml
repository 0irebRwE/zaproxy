<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>zap-linux-assembly</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${basedir}/src/main/app-resources</directory>
			<outputDirectory>/</outputDirectory>
			<lineEnding>unix</lineEnding>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>${project.build.outputDirectory}</directory>
			<outputDirectory>OWASP ZAP.app/Contents/Resources/Java</outputDirectory>
			<excludes>
				<exclude>META-INF/**/*</exclude>
				<exclude>**/*.icns</exclude>
			</excludes>
			<lineEnding>unix</lineEnding>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>/System/Library/Frameworks/JavaVM.framework/Resources/MacOS/JavaApplicationStub</source>
			<outputDirectory>OWASP ZAP.app/Contents/MacOS</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>${basedir}/src/main/app-resources/OWASP ZAP.app/Contents/Resources/ZAP.icns</source>
			<outputDirectory>OWASP ZAP.app/Contents/Resources</outputDirectory>
			<fileMode>0644</fileMode>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<outputDirectory>OWASP ZAP.app/Contents/Resources/Java/lib</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<excludes>
				<exclude>org.owasp.zaproxy:zap-api:jar:${project.version}</exclude>
				<exclude>org.owasp.zaproxy:zap-ant-tasks:jar:${project.version}</exclude>
				<exclude>org.owasp.zaproxy:zap:jar:${project.version}</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>OWASP ZAP.app/Contents/Resources/Java</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<includes>
				<include>org.owasp.zaproxy:zap:jar:${project.version}</include>
				<include>org.owasp.zaproxy:zap-api:jar:${project.version}</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>